#  for key in rsa ed25519; do
#    if [ -f $HOME/.ssh/id_$key ]; then
#      $(command -v ssh-add) -l | grep ssh/id_rsa &>/dev/null || ssh-add ~/.ssh/id_rsa
#    fi
#  done
#
#  $(which mosh) "$@"
#}
#export -f ssh_add_mosh
alias mosh="ssh_add_mosh"


