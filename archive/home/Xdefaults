! xscreensaver ---------------------------------------------------------------
! termName must be screen otherwise vim colorschemes will break in subtle ways
URxvt.termName: rxvt-256color
URxvt.reverseVideo: True
URxvt.font: xft:FiraCode:pixelsize=14
URxvt.boldFont: xft:FiraCode:bold:pixelsize=14
! Enable Shift-PageUp/Down in screen
Urxvt*secondaryScroll: true
! URxvt.letterSpace: -1
URxvt.urlLauncher: firefox
URxvt.matcher.button: 1
URxvt.scrollstyle: plain
URxvt*fading: 30
!URxvt.borderColor: #000030
!URxvt.internalBorder: 1
URxvt.saveLines: 4055
URxvt.iso14755: False
URxvt.iso14755_52: False

URxvt.perl-ext-common: default,matcher,font-size,color-themes
URxvt.color-themes.state-file: ~/.urxvt-theme
URxvt.color-themes.autosave: 1
URxvt.keysym.M-C-l:  perl:color-themes:load-state
URxvt.keysym.M-C-s:  perl:color-themes:save-state
URxvt.bell-command: notify-send "Beep, Beep"
URxvt.urgentOnBell: true
URxvt.keysym.M-escape: perl:keyboard-select:activate
!URxvt.keysym.Shift-Control-V: eval:paste_clipboard
!URxvt.keysym.Shift-Control-C: eval:copy_clipboard
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

URxvt.color-themes.themedir:  ~/git/configs/tools/urxvt/urxvt-color-themes/
URxvt.color-themes.preprocessor: /usr/bin/cpp
URxvt.keysym.Shift-Control-Left:   perl:color-themes:prev
URxvt.keysym.Shift-Control-Right:  perl:color-themes:next

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Shift-Control-Up: perl:font-size:increase
URxvt.keysym.Shift-Control-Down: perl:font-size:decrease

URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-K:     \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-J:     \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-H:     \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-L:     \033[1;5C
!font settings
xscreensaver.Dialog.headingFont:        -*-dina-bold-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-dina-medium-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-dina-medium-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-dina-medium-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-dina-bold-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-dina-medium-r-*-*-10-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-dina-bold-r-*-*-10-*-*-*-*-*-*-*
!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #EDEDED
xscreensaver.Dialog.background:         #202020
xscreensaver.Dialog.topShadowColor:     #202024
xscreensaver.Dialog.bottomShadowColor:  #202024
xscreensaver.Dialog.Button.foreground:  #EDEDFF
xscreensaver.Dialog.Button.background:  #444
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #EDEDFF
xscreensaver.Dialog.text.background:    #444
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #A9B7C4
xscreensaver.passwd.thermometer.background:  #202020
xscreensaver.passwd.thermometer.width:       8
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %I:%M%P %a %b %d, %Y

