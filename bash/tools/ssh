#!/bin/bash
# WARNING - THIS SCRIPT IS INCREDIBLY SLOW
# ========================================
SSH_ENV="$HOME/.ssh/environment"

function start_agent {
  echo "Initialising new SSH agent..."
  /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
  echo succeeded
  chmod 600 "${SSH_ENV}"
  # File may not exist, so don't follow for shellcheck linting (SC1090).
  # shellcheck source=/dev/null
  . "${SSH_ENV}" > /dev/null
}

# Source SSH settings, if applicable
if [ -f "${SSH_ENV}" ]; then
  # File may not exist, so don't follow for shellcheck linting (SC1090).
  # shellcheck source=/dev/null
  . "${SSH_ENV}" > /dev/null

  # make ssh-agent idempotent.
  if [ -n "${SSH_AGENT_PID}" ]; then
    ps aux | awk '{print $2}' | grep $SSH_AGENT_PID > /dev/null || {
      start_agent
      /usr/bin/ssh-add
    }
  fi
else
    start_agent
    /usr/bin/ssh-add
fi

# Fix SSH auth socket location so agent forwarding works with tmux
if test "$SSH_AUTH_SOCK" ; then
  ln -sf "$SSH_AUTH_SOCK" ~/.ssh/ssh_auth_sock
fi

# fun stuff:
# alias pong="ping -c 1 $(echoip | head -n 1 | tr -s ' ' | cut -d ':' -f 2)"

