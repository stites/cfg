#!/bin/bash

# ========================= #
# Load "run-once" settings  #
# ========================= #
[[ ! -f ~/.bash/functions  ]] || source ~/.bash/functions

eval "$(fasd --init auto)"

safe_source /usr/local/etc/bash_completion

# ========================================================= #
# setup environments                                        #
# ========================================================= #
safe_source ~/.bash/colors

for SETTING in git tmux node task nginx vim python ruby ssh prompt; do
  safe_source ~/.bash/$SETTING
done

# ========================================================= #
# PATH Exports                                              #
# ========================================================= #
safe_path_add /bin
safe_path_add /sbin
safe_path_add /usr/bin
safe_path_add /usr/sbin
safe_path_add /usr/local/bin
safe_path_add /usr/local/sbin

